<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorGlow"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zeus.xero.doziexprofileapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/image_dimens"
            android:layout_height="@dimen/image_dimens"
            android:layout_gravity= "center_horizontal"
            android:src="@drawable/dozie1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="@dimen/h1_textsize"
            android:layout_marginTop="@dimen/basic_margin"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:fontFamily="casual"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textSize="@dimen/h2_textsize"
            android:layout_marginTop="@dimen/basic_margin2"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/textview_side_margins"
            android:layout_marginRight="@dimen/textview_side_margins"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slack"
            android:textSize="@dimen/h2_textsize"
            android:layout_marginTop="@dimen/basic_margin2"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/textview_side_margins"
            android:layout_marginRight="@dimen/textview_side_margins"
            android:textColor="@color/colorPurple"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/basic_margin2"
            android:layout_gravity="center_horizontal">


            <Button
                android:id="@+id/facebook"
                android:layout_width="@dimen/image_dimens2"
                android:layout_height="@dimen/image_dimens2"
                android:layout_gravity= "center_horizontal"
                android:layout_margin="@dimen/image_margin"
                android:background="@drawable/facebook"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/github"
                android:layout_width="@dimen/image_dimens3"
                android:layout_height="@dimen/image_dimens3"
                android:layout_gravity= "center_horizontal"
                android:layout_margin="@dimen/image_margin"
                android:textSize="@dimen/button_textsize"
                android:background="@drawable/slack"
                android:onClick="onClick"/>
            <Button
                android:id="@+id/twitter"
                android:layout_width="@dimen/image_dimens3"
                android:layout_height="@dimen/image_dimens3"
                android:layout_gravity= "center_horizontal"
                android:layout_margin="@dimen/image_margin"
                android:textSize="@dimen/button_textsize"
                android:background="@drawable/twitter"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/call"
                android:layout_height="@dimen/image_dimens2"
                android:layout_width="@dimen/image_dimens2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/basic_margin2"
                android:textSize="@dimen/button_textsize"
                android:background="@drawable/call"
                android:onClick="onClick"/>

        </LinearLayout>

        <Button
            android:id="@+id/mail"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/button_width"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/basic_margin2"
            android:textSize="@dimen/button_textsize"
            android:background="@color/colorPrimary"
            android:text="@string/button"
            android:onClick="onCLick"/>


    </LinearLayout>
</RelativeLayout>
